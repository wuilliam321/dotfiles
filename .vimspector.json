{ /** https://github.com/golang/vscode-go/blob/master/docs/debugging-legacy.md#debug-a-single-test-function-go-launch-test-function **/
  "configurations": {
    "run": {
      "adapter": "delve",
      "filetypes": [
        "go"
      ],
      "variables": {
        "dlvFlags": "--check-go-version=false"
      },
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}",
        "mode": "debug"
      }
    },
    "package": {
      "adapter": "delve",
      "filetypes": [
        "go"
      ],
      "variables": {
        "dlvFlags": "--check-go-version=false"
      },
      "configuration": {
        "request": "launch",
        "mode": "test",
        "program": "${workspaceFolder}",
        "env": {},
        "args": []
      }
    },
    "file": {
      "adapter": "delve",
      "filetypes": [
        "go"
      ],
      "variables": {
        "dlvFlags": "--check-go-version=false"
      },
      "configuration": {
        "request": "launch",
        "mode": "test",
        "program": "${file}",
        "env": {},
        "args": []
      }
    },
    "method": {
      "adapter": "delve",
      "filetypes": [
        "go"
      ],
      "variables": {
        "dlvFlags": "--check-go-version=false"
      },
      "configuration": {
        "request": "launch",
        "mode": "test",
        "program": "${workspaceFolder}",
        "env": {},
        "args": [
          "-test.run",
          "${Test}"
        ]
      }
    }
  }
}
